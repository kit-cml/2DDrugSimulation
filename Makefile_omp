PETSC_LIB= $(PETSC_DIR)/$(PETSC_ARCH)/lib
SUNDIALS_DIR=$(BLDIR)/sundials-2.7.0
SUNDIALS_LIB=$(SUNDIALS_DIR)/lib
include ${PETSC_DIR}/conf/variables
