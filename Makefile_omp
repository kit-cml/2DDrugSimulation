#####PETSC_LIB="-Wl,-rpath,/opt/Lib/petsc-3.1-p8-openmp/linux-gnu-c-debug/lib -L/opt/Lib/petsc-3.1-p8-openmp/linux-gnu-c-debug/lib -lpetsc -lblas -lm -L/usr/local/lib/gcc/x86_64-unknown-linux-gnu/5.4.0 -L/usr/local/lib64 -L/opt/intel/composer_xe_2011_sp1.9.293/compiler/lib/intel64 -L/opt/intel/composer_xe_2011_sp1.9.293/ipp/lib/intel64 -L/opt/intel/composer_xe_2011_sp1.9.293/mkl/lib/intel64 -L/opt/intel/composer_xe_2011_sp1.9.293/tbb/lib/intel64/cc4.1.0_libc2.4_kernel2.6.16.21 -L/usr/local/lib -ldl -lgomp -lgcc_s -lpthread -lg2c -lm -L/usr/lib/gcc/x86_64-redhat-linux/3.4.6 -lm -ldl -lgomp -lgcc_s -lpthread -ldl "
LEX      = flex
YACC     = yacc
CXXFLAGS = 
LEXFLAGS =
YACCFLAGS= -d
INCPATH  = -I./ -I/ $(PETSC_DIR)/include -I$(SUNDIALS_DIR)/include
#CLINKER    = /usr/local/bin/mpic++
#PCC	 =  /opt/Lib/openmpi-2.1.3/bin/mpic++
PCC      = g++
LFLAGS   =  -pg -fopenmp
LIBS     = $(PETSC_LIB) -lpetsc  -lz -lm


AR       = ar cqs
RANLIB   =
TAR      = tar -cf
GZIP     = gzip -9f
COPY     = cp -f
COPY_FILE= $(COPY)
COPY_DIR = $(COPY) -r
INSTALL_FILE= $(COPY_FILE)
INSTALL_DIR = $(COPY_DIR)
DEL_FILE = rm -f
SYMLINK  = ln -sf
DEL_DIR  = rmdir
MOVE     = mv -f
CHK_DIR_EXISTS= test -d
MKDIR    = mkdir -p

####### Output directory

OBJECTS_DIR = ./

####### Files

HEADERS := fem.h \
	  heart.h \
	  mesh.h \
		fiber.h \
		bspm.h \
		../cellc/cell.h \
    ccalcexception.h \
    $(wildcard ../CellMLSimulator/**/*.hpp)

SOURCES := bench3d.cpp \
	  fem.cpp \
	  heart.cpp \
	  mesh.cpp \
	  fiber.cpp \
    bspm.cpp \
    ../cellc/cell.cpp \
    ccalcexception.cpp \
    $(wildcard ../CellMLSimulator/**/*.cpp)

OBJECTS := $(SOURCES:%.cpp=%.o)

FORMS =
UICDECLS =
UICIMPLS =
SRCMOC   =
OBJMOC =
DESTDIR  = 
TARGET   = ./bin/CEPCellMLomp

first: all
####### Implicit rules

.SUFFIXES: .c .o .cpp .cc .cxx .C

.cpp.o:
	$(PETSC_COMPILE_SINGLE) $(CXXFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(PETSC_COMPILE_SINGLE) $(CXXFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(PETSC_COMPILE_SINGLE) $(CXXFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(PETSC_COMPILE_SINGLE) $(CXXFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(PETSC_COMPILE_SINGLE) $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: Makefile $(TARGET)

$(TARGET):  $(OBJECTS)
	cep2017_heart -d bin/ || mkdir -p ./bin
	$(info PCC="$(PCC)"  )
	$(info PETSC_LIB="$(PETSC_LIB)")
	$(PCC) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJCOMP) $(LIBS)

dist:
	@mkdir -p .tmp/two && $(COPY_FILE) --parents $(SOURCES) $(HEADERS) $(FORMS) $(DIST) .tmp/two/ && ( cd `dirname .tmp/two` && $(TAR) two.tar two && $(GZIP) two.tar ) && $\(MOVE) `dirname .tmp/two`/two.tar.gz . && $(DEL_FILE) -r .tmp/two


clean:
	-$(DEL_FILE) -f *.o
	-$(DEL_FILE) -f ../CellMLSimulator/*.o
	-$(DEL_FILE) -f ../CellMLSimulator/**/*.o
	#-$(DEL_FILE) $(OBJECTS)
	-$(DEL_FILE) *~ core *.core
	-$(DEL_FILE) -f *.o
	#-$(DEL_FILE) -f tn2006 
	-$(DEL_FILE) -f *.out
	-$(DEL_FILE) $(TARGET)
